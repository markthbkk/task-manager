{{#each displayItems}}

  <div class='todo-item-summary'>
    <div class='item-controls-area-top-row'>
      <div
        data-status={{this.status}}
        class='item-ctrl status-indicator item-open'
      ></div>
      <div class='customer-caption'>{{this.customer}}</div>
      <div class='title-caption'>{{this.title}}
      </div></div>
    <div class='item-controls-area-second-row'>
      <div class='details-edit-view'>
        <button class='item-ctrl-btn edit-todo'>Edit</button>
      </div>
      <div class='mark-open'><button
          class='item-ctrl-btn open-btn'
        >Open</button></div>
      <div class='mark-complete'>
        <button class='item-ctrl-btn complete-btn'>Complete</button>
      </div>
      <div class='mark-closed'>
        <button class='item-ctrl-btn close-btn'>Close</button>
      </div>
      <div class='delete'><button
          class='item-ctrl-btn delete-btn'
        >Delete</button></div>
    </div>

    <div class='main-text-area-read-only'>{{this.description}}
    </div>

    <div class='footer-info-area'>
      <div class='created'>Created:
        {{this.friendlyDate}}
      </div>
      <div class='document-id'>{{this._id}}</div>
    </div>
  </div>

{{/each}}

<script src='/scripts/showAllTodos.js'></script>